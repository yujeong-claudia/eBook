<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.ebook.like.mapper.LikeMapper">
	<select id="selectLikeList" resultType="map">
		SELECT
			*
		FROM
			`like`
	</select>
	
	<select id="selectLikeByBookIdUserId" parameterType="map" resultType="int">
		SELECT
			*
		FROM
			`like`	
		WHERE
			`bookId` = #{bookId}
			<if test="userId != null">
			AND `userId` = #{userId}
			</if>	
	</select>
	
	<insert id="insertLike" parameterType="map">
		INSERT INTO `like`
		(
			`bookId`
			, `userId`
			, `createdAt`
		)
		VALUES
		(
			#{bookId}
			, #{userId}
			, NOW()
		)
	</insert>
	
	<delete id="deleteLikeByBookIdUserId" parameterType="map">
		DELETE
		FROM
			`like`
		WHERE
			`bookId` = #{bookId}
			AND `userId` = #{userId}
	</delete>	
</mapper>